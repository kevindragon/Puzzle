<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="20dp" >
	    <TextView
	        android:id="@+id/textView1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/puzzle_me_back" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#efefef"
        android:layout_margin="20dp"
        android:padding="4dp" >

    	<!-- 第一行 -->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp" >

            <ImageButton
                android:id="@+id/imageButton1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:contentDescription="@string/hello_world"
                android:padding="0dp"
                android:scaleType="centerInside"
                android:src="@drawable/part_01"
                android:width="20dp" />

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="80dip"
                android:layout_height="80dip"
                android:layout_marginLeft="1dp"
                android:contentDescription="@string/hello_world"
                android:padding="0dp"
                android:scaleType="centerInside"
                android:src="@drawable/part_02"
                android:width="20dp" />

            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="80dip"
                android:layout_height="80dip"
                android:layout_marginLeft="1dp"
                android:contentDescription="@string/hello_world"
                android:padding="0dp"
                android:scaleType="centerInside"
                android:src="@drawable/part_03"
                android:width="20dp" />
        </LinearLayout>

    	<!-- 第二行 -->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp" >

            <ImageButton
                android:id="@+id/imageButton4"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:contentDescription="@string/hello_world"
                android:padding="0dp"
                android:scaleType="centerInside"
                android:src="@drawable/part_04"
                android:width="20dp" />

            <ImageButton
                android:id="@+id/imageButton5"
                android:layout_width="80dip"
                android:layout_height="80dip"
                android:layout_marginLeft="1dp"
                android:contentDescription="@string/hello_world"
                android:padding="0dp"
                android:scaleType="centerInside"
                android:src="@drawable/part_05"
                android:width="20dp" />

            <ImageButton
                android:id="@+id/imageButton6"
                android:layout_width="80dip"
                android:layout_height="80dip"
                android:layout_marginLeft="1dp"
                android:contentDescription="@string/hello_world"
                android:padding="0dp"
                android:scaleType="centerInside"
                android:src="@drawable/part_06"
                android:width="20dp" />
        </LinearLayout>

    	<!-- 第三行 -->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp" >

            <ImageButton
                android:id="@+id/imageButton7"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:contentDescription="@string/hello_world"
                android:padding="0dp"
                android:scaleType="centerInside"
                android:src="@drawable/part_07"
                android:width="20dp" />

            <ImageButton
                android:id="@+id/imageButton8"
                android:layout_width="80dip"
                android:layout_height="80dip"
                android:layout_marginLeft="1dp"
                android:contentDescription="@string/hello_world"
                android:padding="0dp"
                android:scaleType="centerInside"
                android:src="@drawable/part_08"
                android:width="20dp" />

            <ImageButton
                android:id="@+id/imageButton9"
                android:layout_width="80dip"
                android:layout_height="80dip"
                android:layout_marginLeft="1dp"
                android:contentDescription="@string/hello_world"
                android:padding="0dp"
                android:scaleType="centerInside"
                android:src="@drawable/part_09"
                android:width="20dp" />
        </LinearLayout>

    	<!-- 第四行 -->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp" >

            <ImageButton
                android:id="@+id/imageButton10"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@null"
                android:contentDescription="@+string/transparent"
                android:padding="0dp"
                android:scaleType="centerInside"
                android:width="20dp" />

            <ImageButton
                android:id="@+id/imageButton11"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="1dp"
                android:background="@null"
                android:contentDescription="@+string/transparent"
                android:padding="0dp"
                android:scaleType="centerInside"
                android:width="20dp" />

            <ImageButton
                android:id="@+id/imageButton12"
                android:layout_width="80dip"
                android:layout_height="80dip"
                android:layout_marginLeft="1dp"
                android:contentDescription="@+string/transparent"
                android:padding="0dp"
                android:scaleType="centerInside"
                android:src="@android:drawable/screen_background_dark_transparent"
                android:width="20dp" />
        </LinearLayout>
    </LinearLayout>
    
    
</LinearLayout>